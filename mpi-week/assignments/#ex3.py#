from mpi4py import MPI
comm = MPI.COMM_WORLD
rank = comm.Get_rank()
size = comm.Get_size()

 if rank ==0:
       data = int(input("enter a number "))
       comm.send(data, dest = 1)
 else:
       data = None
data = comm.recv(source = 0)
print('Process ',rank ,"got ",data )
from mpi4py import MPI

comm = MPI.COMM_WORLD
rank = comm.Get_rank()
size = comm.Get_size()

data = None

# process 0 reads data from user and sends to process 1
if rank == 0:
        data = int(input("Enter a number: "))
            print(f"Process {rank} sent {data}")
                comm.send(data, dest=1)

                # all other processes receive data, add their rank, and send to next process in ring
                for i in range(1, size):
                        if rank == i:
                                    data = comm.recv(source=i-1)
                                            print(f"Process {rank} received {data}")
                                                    data += rank
                                                            print(f"Process {rank} sent {data}")
                                                                    comm.send(data, dest=(i+1)%size)

                                                                    # process 0 receives final result from last process in ring
                                                                    if rank == 0:
                                                                            data = comm.recv(source=size-1)
                                                                        print(f"Process {rank} received {data}")


                                                                            